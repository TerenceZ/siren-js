{
  "view engines": {

  },

  "app": {
    "env": "", // NOTE: `env` is managed by the framework. This value will be overwritten.
    "proxy": false,
    "port": 8000,
    "view engine": null,
    "views": "path:./views",
    "view enabled": true,
    "keys": ["siren-secret-key"]
  },

  "middleware": {

    "responseTime": {
      "enabled": false,
      "priority": 0,
      "module": {
        "name": "koa-response-time"
      }
    },

    "logger": {
      "enabled": false,
      "priority": 10,
      "module": "koa-logger"
    },

    "shutdown": {
      "enabled": true,
      "priority": 20,
      "module": {
        "name": "siren-js/middleware/shutdown",
        "arguments": [
          "__app",
          {
            "timeout": 30000,
            "template": null
          }
        ]
      }
    },

    "compress": {
      "enabled": false,
      "priority": 30,
      "module": "koa-compress"
    },

    "favicon": {
      "enabled": true,
      "priority": 40,
      "module": {
        "name": "koa-favicon",
        "arguments": [ "path:./public/favicon.ico" ]
      }
    },

    "error": {
      "enabled": true,
      "priority": 50,
      "module": {
        "name": "siren-js/middleware/error",
        "arguments": null //["/error.html"]
      }
    },

    "404": {
      "enabled": true,
      "priority": 60,
      "module": {
        "name": "siren-js/middleware/404",
        "arguments": null //["/404.html"]
      }
    },

    "static": {
      "enabled": true,
      "priority": 70,
      "module": {
        "name": "koa-file-server",
        "arguments": [
          "path:./public"
        ]
      }
    },

    "body": {
      "enabled": true,
      "priority": 80,
      "module": {
        "name": "koa-bodyparser",
        "arguments": [{
          "formLimit": "100kb",
          "jsonLimit": "1mb",
          "extendTypes": {
            "json": ["application/x-javascript"]
          }
        }]
      }
    },

    "session": {
      "enabled": true,
      "priority": 90,
      "module": {
        "name": "koa-generic-session",
        "arguments": [
          {
            "key": "koa.sid",
            "prefix": "koa:sess:",
            "cookie": {
              "httpOnly": true,
              "maxAge": null,
              "rewrite": true,
              "signed": true,
              "path": "/"
            }
          }
        ]
      }
    },

    "appsec": {
      "enabled": true,
      "priority": 100,
      "module": {
        "name": "siren-lusca",
        "arguments": [
          {
            "csrf": true,
            "xframe": "SAMEORIGIN",
            "p3p": false,
            "csp": false
          }
        ]
      }
    },

    "router": {
      "enabled": true,
      "priority": 110,
      "module": {
        "name": "siren-enrouten",
        "arguments": [
          "__app",
          {
            "index": "path:./routes"
          }
        ]
      }
    }
  }
}
